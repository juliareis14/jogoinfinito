                     <Image Source="fundo4.png"
                            HorizontalOptions="End"
                            VerticalOptions="End"/>
                     <Image Source="fundo4.png"
                            HorizontalOptions="End"
                            VerticalOptions="End"/>
              </HorizontalStackLayout>


              <HorizontalStackLayout x:Name="HSLayer3">
                     <Image Source="chao.png"
                            HorizontalOptions="End"
                            VerticalOptions="End"/>
                     <Image Source="chao.png"
                            HorizontalOptions="End"
                            VerticalOptions="End"/>
                     <Image Source="chao.png"
                            HorizontalOptions="End"
                            VerticalOptions="End"/>
              </HorizontalStackLayout>


              <Image Source="andar01.png"
                     x:Name="imgplayer"
                     HorizontalOptions="Start"
                     VerticalOptions="End"
                     HeightRequest="100"
                     WidthRequest="300"
                     Margin="0,0,0,50"/>


       </Grid>

</ContentPage>
